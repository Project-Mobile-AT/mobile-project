<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/id_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"   android:layout_weight="1"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="Menu" />
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dados Pessoais"
                android:textColor="@color/text_gray"
                android:textSize="18sp"
                android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="53dp"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:src="@drawable/ic_profile"
                    android:contentDescription="Perfil" /> </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/blue_light"
                android:padding="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="4dp"
                android:backgroundTint="@color/blue_light">

                <ImageView
                    android:id="@+id/imageViewProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_avatar"
                    android:background="@drawable/rounded_image_background" app:tint="@color/primary_purple"
                    android:contentDescription="Imagem de Perfil" />

                <Button
                    android:id="@+id/buttonSelectImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alterar Foto"
                    android:layout_marginTop="12dp"
                    style="@style/Widget.Material3.Button.TextButton" android:textColor="@color/primary_purple" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" /> <TextView
                android:id="@+id/textViewUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alex Johnson"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textColor="@color/text_gray"
                android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_email"
                        app:tint="@color/text_gray"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Ícone de E-mail" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:textStyle="bold"
                        android:textColor="@color/text_gray" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="alex@edu.unifor.br"
                    android:textColor="@color/text_light_gray"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/text_gray"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Ícone de CPF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CPF"
                        android:textStyle="bold"
                        android:textColor="@color/text_gray" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewCpf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="888.888.888-88"
                    android:textColor="@color/text_light_gray"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/text_gray"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Ícone de Data de Nascimento" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data de Nascimento"
                        android:textStyle="bold"
                        android:textColor="@color/text_gray" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewDataNascimento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14/08/2001"
                    android:textColor="@color/text_light_gray"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonUploadImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar Foto de Perfil"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/primary_purple"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/buttonLoadImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carregar Foto de Perfil"
                android:layout_marginTop="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:textColor="@color/primary_purple"
                app:strokeColor="@color/primary_purple" />

        </LinearLayout>
    </ScrollView>


    <FrameLayout
        android:id="@+id/container_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>