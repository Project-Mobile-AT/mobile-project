<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_setae"
            android:contentDescription="Voltar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/backButton"
            android:text="Painel Nutricionista"
            android:textSize="18sp"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_help"
            android:contentDescription="Help" />
    </RelativeLayout>

    <!-- Nome do Nutricionista -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Priscila Cunha"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center" />

    <!-- Botão de adicionar horário -->
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_outlined_green"
        android:drawableStart="@drawable/ic_add"
        android:drawablePadding="8dp"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:text="+ Adicionar Novo Horário de Consulta"
        android:textAllCaps="false"
        android:textColor="#000000" />

    <!-- Primeiro horário agendado -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/dayDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Segunda-Feira 31/03/2025"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/timeSlot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dayDate1"
            android:text="Horário: 09:00 - 12:00"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <ImageView
            android:id="@+id/personIcon1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/timeSlot1"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_avatar"
            android:contentDescription="Pessoa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeSlot1"
            android:layout_toEndOf="@id/personIcon1"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="2/4"
            android:textSize="14sp"
            android:textColor="#666666" />

        <ImageButton
            android:id="@+id/editButton1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_circulo"
            android:contentDescription="Editar"
            android:src="@drawable/ic_edit" />
    </RelativeLayout>

    <!-- Divisor -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Segundo horário agendado -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/dayDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quarta-Feira 02/04/2025"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/timeSlot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dayDate2"
            android:text="Horário: 14:00 - 17:00"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <ImageView
            android:id="@+id/personIcon2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/timeSlot2"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_avatar"
            android:contentDescription="Pessoa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeSlot2"
            android:layout_toEndOf="@id/personIcon2"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="1/4"
            android:textSize="14sp"
            android:textColor="#666666" />

        <ImageButton
            android:id="@+id/editButton2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit"
            android:background="@drawable/ic_circulo"
            android:contentDescription="Editar" />
    </RelativeLayout>

    <!-- Botão de chat -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="72dp"
            android:src="@drawable/ic_chat"
            android:background="@drawable/ic_chat"
            android:contentDescription="Chat" />
    </RelativeLayout>

</LinearLayout>