<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_setae"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="Voltar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Painel Nutricional"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/backButton"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_help"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp"
                android:contentDescription="Acessibilidade" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título da Ficha -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ficha Andrea Moreira"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"/>

            <!-- Card principal -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Objetivo -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Objetivo"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/editObjetivo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Value"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp"/>

                    <!-- Peso -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Peso"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/editPeso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Value"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp"/>

                    <!-- Altura -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Altura"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/editAltura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Value"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp"/>

                    <!-- Idade -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Idade"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/editIdade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Value"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp"/>

                    <!-- Bíceps Esquerdo -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bíceps Esquerdo"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/editBicepsEsquerdo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Value"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp"/>

                    <!-- Bíceps Direito -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bíceps Direito"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/editBicepsDireito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Value"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp"/>

                    <!-- IMC -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IMC"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/editIMC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Value"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp"/>

                    <!-- Cintura -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cintura"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/editCintura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Value"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp"/>

                    <!-- Botões de Ação -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <Button
                            android:id="@+id/btnSalvar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Salvar"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/button_background_dark"
                            android:layout_marginEnd="4dp"/>

                        <Button
                            android:id="@+id/btnEditar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Editar"
                            android:textColor="#000000"
                            android:background="@drawable/btn_yellow_background"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"/>

                        <Button
                            android:id="@+id/btnDeletar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Deletar"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/button_background_red"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card do Plano Nutricional -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Escrever Plano Nutricional"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/editPlanoNutricional"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Value"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp"
                        android:minHeight="100dp"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:layout_marginBottom="12dp"/>

                    <!-- Botões de Ação -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <Button
                            android:id="@+id/btnSalvarPlano"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Salvar"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/button_background_dark"
                            android:layout_marginEnd="4dp"/>

                        <Button
                            android:id="@+id/btnEditarPlano"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Editar"
                            android:textColor="#000000"
                            android:background="@drawable/btn_yellow_background"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"/>

                        <Button
                            android:id="@+id/btnDeletarPlano"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Deletar"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/button_background_red"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botão de chat flutuante no canto (visível na imagem) -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_chat"
                    app:backgroundTint="#3B68E7"
                    android:contentDescription="Chat" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Barra de Navegação Inferior com Apenas Home -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#F8F8F8"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Início"
                android:src="@drawable/ic_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Início"
                android:textColor="#0000FF"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>