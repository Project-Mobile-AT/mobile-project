<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".TelaRF2_1Activity">

    <!-- Título -->
    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vamos completar seu perfil!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tv_subtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isso nos ajudará a conhecer você melhor."
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Campo: Data de nascimento -->
    <EditText
        android:id="@+id/et_data_nascimento"
        android:layout_width="275dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bt_input"
        android:drawableStart="@drawable/ic_calendar"
        android:hint="Data de Nascimento"
        android:inputType="date"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColorHint="#999999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitulo" />

    <!-- Campo: Peso -->
    <EditText
        android:id="@+id/et_peso"
        android:layout_width="278dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bt_input"
        android:drawableStart="@drawable/ic_weight"
        android:hint="Peso"
        android:inputType="numberDecimal"
        android:paddingStart="16dp"
        android:paddingEnd="56dp"
        android:textColorHint="#999999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_data_nascimento" />

    <!-- Botão KG ao lado do campo peso -->
    <TextView
        android:id="@+id/label_kg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bt_unit_kg"
        android:gravity="center"
        android:text="KG"
        android:textColor="#474343"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/et_peso"
        app:layout_constraintTop_toTopOf="@id/et_peso" />

    <!-- Campo: Altura -->
    <EditText
        android:id="@+id/et_altura"
        android:layout_width="274dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bt_input"
        android:drawableStart="@drawable/ic_altura"
        android:hint="Altura"
        android:inputType="numberDecimal"
        android:paddingStart="16dp"
        android:paddingEnd="56dp"
        android:textColorHint="#999999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_peso" />

    <!-- Botão CM ao lado do campo altura -->
    <TextView
        android:id="@+id/label_cm"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bt_unit_cm"
        android:gravity="center"
        android:text="CM"
        android:textColor="#6A6767"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/et_altura"
        app:layout_constraintTop_toTopOf="@id/et_altura" />

    <!-- Botão Entrar -->
    <Button
        android:id="@+id/btn_entrar"
        android:layout_width="208dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bt_button_entrar"
        android:text="Entrar"
        android:textAllCaps="true"
        android:textColor="#8225DB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_altura" />

</androidx.constraintlayout.widget.ConstraintLayout>
